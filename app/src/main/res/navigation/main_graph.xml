<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.mvvmexample.MainFragment"
        android:label="Страны"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_infoDialogFragment"
            app:destination="@id/infoDialogFragment" />
        <action
            android:id="@+id/action_mainFragment_to_countryFragment"
            app:destination="@id/countryFragment" />
    </fragment>
    <dialog
        android:id="@+id/infoDialogFragment"
        android:name="com.example.mvvmexample.InfoDialogFragment"
        android:label="InfoDialogFragment"
        tools:layout="@layout/main_dialog">
        <argument
            android:name="dialogParams"
            app:argType="com.example.mvvmexample.DialogDto" />
        <action
            android:id="@+id/action_infoDialogFragment_to_mainFragment"
            app:popUpTo="@id/infoDialogFragment"
            app:popUpToInclusive="true" />
    </dialog>
    <fragment
        android:id="@+id/countryFragment"
        android:name="com.example.mvvmexample.CountryFragment"
        android:label="Страна"
        tools:layout="@layout/fragment_country" />
</navigation>